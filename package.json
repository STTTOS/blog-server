{
  "main": "index.js",
  "version": "1.0.0",
  "description": "后台服务",
  "name": "blog-site-server",
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "dev": "nodemon -w ./src --ext .ts --exec \"ts-node ./src/index.ts\"",
    "prettier": "prettier --write \"**/*.{js,ts,json}\"",
    "lint": "eslint --cache --ext .ts ./src",
    "lint:fix": "eslint --fix --cache --ext .ts ./src",
    "db:gui": "npx prisma studio",
    "db:migrate": "npx prisma migrate dev --name modify",
    "db:generate": "npx prisma generate",
    "db:sync": "npm run db:migrate && npm run db:generate",
    "db:watch": "nodemon -w prisma/schema.prisma --exec \"npm run db:sync\""
  },
  "author": "三分",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^3.3.0",
    "@prisma/client": "^4.1.1",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-mount": "^4.0.0",
    "koa-router": "^10.1.1",
    "koa-static": "^5.0.0",
    "koa2-connect-history-api-fallback": "^0.1.3",
    "log4js": "^6.5.2",
    "moment": "^2.29.3",
    "ramda": "^0.28.0"
  },
  "devDependencies": {
    "@types/koa": "^2.13.4",
    "@types/koa__cors": "^3.3.0",
    "@types/koa-mount": "^4.0.1",
    "@types/koa-router": "^7.4.4",
    "@types/koa-static": "^4.0.2",
    "@types/ramda": "^0.28.15",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.2.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.7.1",
    "prisma": "^4.1.1",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
